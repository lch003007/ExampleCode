# LanguagePath Backend - 環境變數設定檔
# 此文件包含所有應用程式所需的環境變數

# 環境設定
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT=json

# 資料庫設定 (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=language_path
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false
DB_ECHO_POOL=false

# JWT 設定
JWT_SECRET=your-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_SECONDS=3600
JWT_REFRESH_EXPIRE_SECONDS=86400

# 密碼設定
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# 加密設定
BCRYPT_ROUNDS=12

# CORS 設定 (JSON 格式)
CORS_ORIGINS=["*"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_HEADERS=["*"]

# 速率限制設定
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# 其他安全設定
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# API 設定
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
API_PREFIX=/api
API_TITLE=LanguagePath API
API_DESCRIPTION=LanguagePath Backend API
API_VERSION_INFO=1.0.0
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_OPENAPI_URL=/openapi.json
API_HEALTH_CHECK_URL=/health
API_MAX_REQUEST_SIZE=10485760
API_REQUEST_TIMEOUT=30
API_RESPONSE_TIMEOUT=30
API_DEFAULT_PAGE_SIZE=20
API_MAX_PAGE_SIZE=100
API_CACHE_TTL=300
API_ENABLE_METRICS=true
API_ENABLE_TRACING=false

# 測試設定
TEST_DB_NAME=language_path_test
TEST_JWT_SECRET=test-secret-key-for-testing
TEST_API_HOST=localhost
TEST_API_PORT=8000
TEST_USERNAME_PREFIX=testuser
TEST_PASSWORD=password123
TEST_EMAIL_DOMAIN=example.com
