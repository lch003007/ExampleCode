# Backend Base Project Environment Variables
# 複製此檔案為 .env 並填入實際值

# ===========================================
# 環境設定
# ===========================================
DEBUG=false
ENVIRONMENT=development

# ===========================================
# 資料庫設定 (PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=base_project

# 資料庫連線池設定
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# 資料庫除錯設定
DB_ECHO=false
DB_ECHO_POOL=false

# ===========================================
# JWT / 安全設定
# ===========================================
# JWT 設定 (必須設定)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_SECONDS=3600
JWT_REFRESH_EXPIRE_SECONDS=86400

# 密碼設定
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# 加密設定
BCRYPT_ROUNDS=12

# CORS 設定
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*

# 速率限制設定
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# 其他安全設定
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# ===========================================
# API 設定
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
API_PREFIX=/api

# API 應用程式設定
API_TITLE=Base API
API_DESCRIPTION=Base Backend API
API_VERSION_INFO=1.0.0

# API 文檔設定
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_OPENAPI_URL=/openapi.json

# API 健康檢查設定
API_HEALTH_CHECK_URL=/health

# API 請求設定
API_MAX_REQUEST_SIZE=10485760
API_REQUEST_TIMEOUT=30
API_RESPONSE_TIMEOUT=30

# API 分頁設定
API_DEFAULT_PAGE_SIZE=20
API_MAX_PAGE_SIZE=100

# API 快取設定
API_CACHE_TTL=300

# API 其他設定
API_ENABLE_METRICS=true
API_ENABLE_TRACING=false

# ===========================================
# 測試設定
# ===========================================
# 測試資料庫設定
TEST_DB_NAME=base_project_test

# 測試 JWT 設定
TEST_JWT_SECRET=test-secret-key-for-testing

# 測試 API 設定
TEST_API_HOST=localhost
TEST_API_PORT=8000

# 測試用戶設定
TEST_USERNAME_PREFIX=testuser
TEST_PASSWORD=password123
TEST_EMAIL_DOMAIN=example.com

# ===========================================
# 日誌設定
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# 其他設定
# ===========================================
# Redis 設定 (可選)
REDIS_URL=redis://localhost:6379/0

# 外部 API 金鑰 (可選)
EXTERNAL_API_KEY=your-external-api-key-here

# ===========================================
# AI 設定 (OpenAI)
# ===========================================
# OpenAI API Key (必須設定)
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI API Base URL (可選，使用自訂端點時設定)
# OPENAI_API_BASE=https://api.openai.com/v1

# OpenAI Organization ID (可選)
# OPENAI_ORGANIZATION=your-organization-id

# 預設 AI 模型
AI_DEFAULT_MODEL=gpt-3.5-turbo

# 預設溫度參數 (0-2)
AI_DEFAULT_TEMPERATURE=0.7

# 預設最大 token 數
AI_DEFAULT_MAX_TOKENS=1000

# AI 請求超時時間（秒）
AI_REQUEST_TIMEOUT=60

# AI 請求最大重試次數
AI_MAX_RETRIES=3

# 是否啟用串流輸出
AI_ENABLE_STREAMING=true

# 對話歷史最大訊息數
AI_MAX_HISTORY_MESSAGES=10

# 是否啟用快取
AI_ENABLE_CACHE=false

# 快取有效期（秒）
AI_CACHE_TTL=3600
